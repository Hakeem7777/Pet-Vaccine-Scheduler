# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# LLM Provider Configuration
# Options: gemini (default), openai
LLM_PROVIDER=gemini

# API Keys (only the one for your chosen provider is required)
GOOGLE_API_KEY=your-google-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# LLM Configuration (optional - provider defaults will be used if not set)
# For gemini: gemini-2.5-flash (chat), gemini-2.0-flash (vision)
# For openai: gpt-4o-2024-08-06
LLM_MODEL=
LLM_TEMPERATURE=0.3

# Resend Email Configuration
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM_EMAIL=onboarding@resend.dev

# Contact Form Configuration
CONTACT_ADMIN_EMAIL=your-admin-email@example.com

# Supabase Database
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://your-username:your-password@your-supabase-host:6543/postgres
SERVICE_ROLE_API_KEY=your-supabase-service-role-key
SUPABASE_ANON_PUBLIC_KEY=your-supabase-anon-public-key
