# Vaccine Scheduler - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Django Settings
# ===========================================

# Secret key for Django (generate a secure random string for production)
SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# LLM Configuration
# ===========================================

# LLM Provider: "gemini" or "openai"
LLM_PROVIDER=gemini

# Google Gemini API Key (if using Gemini)
GOOGLE_API_KEY=your-google-api-key

# OpenAI API Key (if using OpenAI)
# OPENAI_API_KEY=your-openai-api-key

# Model name (optional - defaults will be used)
LLM_MODEL=gemini-2.0-flash

# Temperature for LLM responses (0.0 - 1.0)
LLM_TEMPERATURE=0.3

# ===========================================
# Email Service (Optional)
# ===========================================

# Resend API Key for email notifications
RESEND_API_KEY=your-resend-api-key

# From email address
RESEND_FROM_EMAIL=onboarding@resend.dev

# ===========================================
# Gunicorn Settings (Production)
# ===========================================

# Number of worker processes
GUNICORN_WORKERS=2

# Request timeout in seconds
GUNICORN_TIMEOUT=120
